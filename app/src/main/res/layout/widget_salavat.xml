<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widgetLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_widget"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="ltr"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/salavatCounterTextView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_sun_2"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/dana"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/blue"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/salavatLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layoutDirection="rtl"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/salavetTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#000099CC"
                    android:fontFamily="@font/dana"
                    android:padding="1dp"
                    android:text="صلوات های روز"
                    android:textColor="#ffffff"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/salavatDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:background="#000099CC"
                    android:contentDescription="@string/defaultDay"
                    android:drawableEnd="@drawable/ic_return"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/dana"
                    android:padding="3dp"
                    android:text="@string/defaultDay"
                    android:textColor="@color/lightGreen"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    tools:ignore="UseCompatTextViewDrawableXml" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>